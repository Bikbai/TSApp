             xmlns:local="clr-namespace:TSApp"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="TSApp.App"
             StartupUri="./Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="TopCellTemplate">
                <TextBlock 
                    Width="690"
                    Text="Начало рабочего дня:"
                    TextAlignment="Right" IsEnabled="False" Margin="0,0,10,0"
                   />
        </DataTemplate>
        <DataTemplate x:Key="BottomCellTemplate">
                <TextBlock
                    Width="690"
                    Text="Итого:"
                    TextAlignment="Right" FontWeight="Bold"
