<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TSApp"
             xmlns:utility="clr-namespace:TSApp.Utility"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="TSApp.App"
             StartupUri="./Views/MainWindow.xaml">
    <Application.Resources>
        <utility:TimeSpanConverter x:Key="timeSpanConverter"/>
        <DataTemplate x:Key="TopCellTemplate">
                <TextBlock 
                    Width="690"
                    Text="Начало рабочего дня:"
                    TextAlignment="Right" IsEnabled="False" Margin="0,0,10,0"
                   />
        </DataTemplate>
        <DataTemplate x:Key="BottomCellTemplate">
            <TextBlock
                    Width="690"
                    Text="Итого:"
                    TextAlignment="Right" FontWeight="Bold"
                   />
        </DataTemplate>
        <DataTemplate x:Key="totalWork">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock FontWeight="Bold" Text="{Binding Path=CompletedWork}"/>
                <TextBlock FontWeight="Bold" Text="/"/>
                <TextBlock FontWeight="Bold" Text="{Binding Path=TotalWork, Converter={StaticResource timeSpanConverter}}"/>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
